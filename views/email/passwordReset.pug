extends baseEmail

block content
    p Hi #{firstName},
    p If you forgot your password, submit a PATCH request with your new password and password confirm to: #{url}
    p (Still in development)
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') reset password
    p If you didn't forget your password please disregard.
   
